
 @* @model using Microsoft.EntityFrameworkCore.DbSet<Persona> * *@
@using bronzetti.christian._5h.PrimaWeb.Models

@{
    ViewData["Title"] = "Elenco persone";
}

<div class="text-center">
    <h1 class="display-4">Persone</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Cognome</th>
        </tr>
        <tbody>
            @foreach (Persona p in Model)
            {
                <tr>
                    <td>@p.ID</td>
                    <td>@p.Nome</td>
                    <td>@p.Cognome</td>
                </tr>
            }
        </tbody>
    </table>
</div>
